<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>TO DO LIST</title>
</head>
<body>

    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
        <% for (let i = 0; i < newListItem.length; i++) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= newListItem[i].id %>" onChange="this.form.submit()">
                    <p><%= newListItem[i].name %></p>
                </div>
            </form>
            
       <% } %>

       <form class="item" action="/" method="post">
            <input type="text" name="new_item" placeholder="New Item" autocomplete="off" autofocus>
            <button type="submit" name="button">+</button>
       </form>
    </div>


</body>
</html>